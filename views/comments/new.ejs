<% include ../partials/header %>
<div class="container">
    <a href="/campgrounds/">Return to campgrounds</a>
    <div class="row">
        <h1 style="text-align: center;">Add a new Comment to <%= campground.name %></h1>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input type="text" name="comment[text]" class="form-control" placeholder="text">
                </div>
                <div class="form-group">
                    <input type="text" name="comment[author]" class="form-control" placeholder="author">
                </div>
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
                
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>